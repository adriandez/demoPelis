doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body
        h2 #{data.Title} 
        p Director: #{data.Director} 
        p Writer: #{data.Writer} 
        p Plot: #{data.Plot} 
        img(src=data.Poster, alt="poster")